create table orders(
  id INT not NULL,
  order_number INT,
  customer_id INT,
  product_id INT,
  PRIMARY KEY(id),
  FOREIGN KEY(customer_id) REFERENCES customer(id), // FORIEGN KEY links tables together and it will establish relationship. 
  FOREIGN KEY(product_id) REFERENCES product(id)
  );

INSERT INTO orders
VALUES (1, 4362, 2, 1);

CREATE TABLE customers(
  id INT NOT NULL,
  first_name STRING,
  last_name STRING,
  address STRING,
  PRIMARY KEY(id)
  );

INSERT INTO customers
VALUES (1, 'John', 'Doe', '32 Cherry Bivd');

INSERT INTO customers
VALUES (2, 'Prasad', 'M S', 'Bengaluru');

// We can join tables together. There differnt joins such as left join, right join, inner join, full join.
// Joining orders and customers table. Showing specific columns of those tables.
SELECT orders.order_number, customers.first_name, customers.last_name, customers.address
FROM orders
INNER JOIN customers ON orders.customer_id = customers.id;

// To asemble data of different tables and to query data from different table we use join
// In below query we joined few columns of orders and products tables.
SELECT orders.order_number, products.name, products.price, products.stock
FROM orders
INNER JOIN products ON orders.product_id = products.id;
