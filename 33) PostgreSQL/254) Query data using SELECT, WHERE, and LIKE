// Download csv file from course resource
// Open pgAdmin -> click on Query tool
// Create table
Create table world_food (
	id SERIAL PRIMARY KEY,
	country VARCHAR(45),
	rice_production FLOAT,  // FLOAT data type is to store Integer with decimal values
	wheat_production FLOAT
);

// In our csv file there is no id column. So, while importing data into our table,
// click on Columns-> Remove id column name from it (Then id will be auto generated) -> OK

// Queries -
Select * from world_food;

select country from world_food;

select country, wheat_production from world_food;

select rice_production
from world_food
where country = 'United States';

select country 
from world_food 
where wheat_production > '20';

select country 
from world_food
where country like 'U' || '%';  //  '||' this symbol will concatenate U with % and select country with first letter U and whatever characters may be after it. 

select country
from world_food
where country like '%' || 'a';
